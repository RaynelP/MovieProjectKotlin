<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigate"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.raynel.alkemyproject.view.principalActivity.movieList.ListMovieFragment"
        tools:layout="@layout/fragment_list" >

        <action
            android:id="@+id/action_fragmentList_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment"
            app:enterAnim="@android:anim/slide_in_left" />

    </fragment>

    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.raynel.alkemyproject.view.principalActivity.movieDetail.MovieDetailFragment"
        tools:layout="@layout/fragment_detail_movie"/>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.raynel.alkemyproject.view.principalActivity.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.raynel.alkemyproject.view.principalActivity.FavoritesFragment.FavoritesFragment"
        android:label="FavoritesFragment" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.raynel.alkemyproject.view.principalActivity.user.UserFragment"
        android:label="UserFragment" />

</navigation>